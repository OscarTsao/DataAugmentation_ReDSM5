# MLflow Configuration
# Copy this file to .env and adjust as needed
MLFLOW_TRACKING_URI=http://localhost:5500

# PostgreSQL Configuration (for MLflow backend)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow

# DVC Configuration
DVC_NO_ANALYTICS=1

# Python Configuration
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Optional: AWS credentials for DVC S3 remote
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Optional: Weights & Biases (if you want to add W&B in addition to MLflow)
# WANDB_API_KEY=your_wandb_api_key
# WANDB_PROJECT=redsm5-classification
